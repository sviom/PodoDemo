@model string

@{
    string title = "고d객";
    ViewData["Title"] = title;
}
<script type="text/javascript">
    $(document).ready(function () {
        var source =
            {
                localdata: @Html.Raw(Model),
                datatype: "json",
                datafields:
                [
                    { name: 'Accountid', type: 'number' },
                    { name: 'Name', type: 'string' },
                    { name: 'BizNum', type: 'string' },
                    { name: 'Phone', type: 'string' },
                    { name: 'Address', type: 'string' }
                    //{ name: 'ContactCount', type: 'number' },
                    //{ name: 'ProgressBusinessCount', type: 'number' },
                    //{ name: 'EndBusinessCount', type: 'number' },
                    //{ name: 'SalesCount', type: 'number' },
                    //{ name: 'ServiceCount', type: 'number' },
                    //{ name: 'ActivityCount', type: 'number' },
                    // Service를 이용해서 받아오는 값의 형식 설정
                    //{ name: 'BizTypeText', type: 'string' },
                    //{ name: 'CustomerTypeText', type: 'string' }
                ]
            };

        var dataAdapter = new $.jqx.dataAdapter(source);

        $("#accountList").jqxGrid(
            {
                width: 1100,
                source: dataAdapter,
                pageable: true,
                autoheight: true,
                autorowheight: true,
                sortable: true,
                altrows: true,
                enabletooltips: true,
                editable: false,
                selectionmode: 'singlerow',
                pagesizeoptions: [10, 15, 20, 25, 30, 35, 40, 45, 50],
                //showfilterrow: true,
                filterable: true,
                pagesize: 15,
                //theme: "MetroCustom",//테마설정
                columnsheight: '40px',//헤더 높이 설정
                //localization: getLocalization('ko-KR'),
                columns: [
                    //문자로 나오는 항목
                    { text: "Num", datafield: "Accountid", hidden: true, align: 'center', cellsalign: 'center' },
                    { text: "Name", datafield: "Name", align: 'center', cellsalign: 'left' },
                    //{ text: '사업자번호', datafield: 'BizNum', align: 'center', cellsalign: 'center', width: 100 },
                    { text: "Phone", datafield: "Phone", align: 'center', cellsalign: 'center', width: 100 }
                    //{ text: '주소', datafield: 'Address', align: 'center', cellsalign: 'center' }
                    //{ text: 'Maker', datafield: 'MainProduct', align: 'center', cellsalign: 'center', width: 80 },
                    // 업종 (메인페이지 및 거래처 페이지 중단 GRID에 표시함)CustomerTypeText
                    //{ text: '업종', datafield: 'CustomerTypeText', align: 'center', cellsalign: 'center', width: 70, cellsrenderer: countCellRenderer6 },
                    // 고객 타입 (메인페이지 및 거래처 페이지 중단 GRID에 표시함)BizTypeText
                    //{ text: '고객타입', datafield: 'BizTypeText', align: 'center', cellsalign: 'center', width: 70, cellsrenderer: countCellRenderer7 },

                    //숫자로 나오는 항목
                    //{ text: '연락처', datafield: 'ContactCount', align: 'center', cellsalign: 'center', width: 80, cellsrenderer: countCellRenderer1 },
                    //{ text: '영업기회', datafield: 'ProgressBusinessCount', align: 'center', cellsalign: 'center', width: 80, cellsrenderer: countCellRenderer2 },
                    //{ text: '영업기회(종료)', datafield: 'EndBusinessCount', align: 'center', cellsalign: 'center', width: 110, cellsrenderer: countCellRenderer3 },
                    //{ text: 'Order정보', datafield: 'SalesCount', align: 'center', cellsalign: 'center', width: 80, cellsrenderer: countCellRenderer3 },
                    //{ text: '서비스', datafield: 'ServiceCount', align: 'center', cellsalign: 'center', width: 80, cellsrenderer: countCellRenderer4 },
                    //{ text: '활동', datafield: 'ActivityCount', align: 'center', cellsalign: 'center', width: 80, cellsrenderer: countCellRenderer5 }
                ]
            });
    });
</script>

<div class="View">
    <div class="ViewTitle">거래처 목록</div>
    <div id="accountList"></div>
</div>

