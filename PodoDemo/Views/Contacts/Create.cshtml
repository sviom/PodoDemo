        if (ValidateForm()) {
            $("#ContactsCreateForm").submit();
        }
    }

    // 입력한 값들에 대한 유효성 검사
    function ValidateForm() {
        var nameValue = $("#Name").val();
        //var phoneValue = $("#Phone").val();
